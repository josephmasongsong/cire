---
title: Post Template
listed: true
published: true
content_type: "posts"
display_settings:
  hidden: true     
---
{% extends 'layouts/news' %}

{% block featured_image %}
%section.bg-secondary.px-5{style: "background: url({% capture image_url %}{% editable_file 'header_image' %}{% endeditable_file %}{% endcapture %}{% if image_url != '' %}{{ image_url | image_url }}{% else %}{{ post.featured_image.url }}{% endif %}) center center; background-size: cover; height:350px;"}
  .overlay-with-gradient.blue.transparent
  .container
    .row{style:"position:absolute;z-index:2;color: #fff !important; top:50%;  transform: translateY(-50%);"}
      .col-sm-9
        %h1.mb-2.text-white {{ page.title }}
        %p.lead.mb-0 
          {{ post.posted_at | date: "%A, %B %d, %Y" }}
{% endblock %}

{% block 'content/main' %}
%h3.text-primary.mb-4 {{ post.teaser }}
.freetext.lead.mb-4
  {{ post.body }}
{% if post.tags %}
{% for tag in post.tags %}
%span.badge.badge-info.px-2.py-1.font-weight-normal {{ tag | escape }}
{% endfor %}
{% endif %}
{% endblock %}


{% block content/sidebar %}
%h5.mb-4.pl-3.py-2.text-primary{style: "border-left: 3px solid #DE8032;"} News Updates
%nav.nav.flex-column.side-nav
  {% for post in contents.posts %}
  %a{class: "text-primary p-3 {% if post._slug == page.slug %}active{% endif %}", href: "{% path_to post %}" } {{ post.posted_at | date: "%B %d, %Y" }}
  {% endfor %}
{% endblock %}
