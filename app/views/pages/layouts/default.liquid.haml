---
title: Default layout
is_layout: false
---
!!!
%html{lang: "en"}
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    {% block og %}
    %meta{:property => "og:title", :content => "Our Mission"}/
    %meta{:property => "og:site_name", :content => "Community Impact Real Estate Society"}/
    %meta{:property => "og:url", :content => "{% path_to home %}"}/
    %meta{:property => "og:image", :content => "{{ 'dibeppe-corner.jpg' | theme_image_url }}"}/
    %meta{:property => "og:description", :content => "Community Impact Real Estate contributes to the efforts of building an inclusive local economy by using the space in our portfolio to provide affordable goods, services, social support and employment opportunities for residents in the communities within which we work."}/
    {% endblock %}
    %title {{ site.name }}
    %link{:crossorigin => "anonymous", :href => "https://use.fontawesome.com/releases/v5.2.0/css/all.css", :integrity => "sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ", :rel => "stylesheet"}/
    %link{:href => "https://unpkg.com/smartphoto@1.1.0/css/smartphoto.min.css", :rel => "stylesheet"}/
    %link{href: "{{ 'favicon.png' | theme_image_url }}", rel: "shortcut icon"}
    %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/simple-line-icons/2.4.1/css/simple-line-icons.css", :rel => "stylesheet"}/
    {{ 'bootstrap.css' | stylesheet_tag }}
    {{ 'hamburgers.min.css' | stylesheet_tag }}
    {{ 'application.css' | stylesheet_tag }}
  %body{class: "{% if page.slug == 'index' or page.slug == 'mission-and-goals' or page.slug == 'vision-and-values' %}pad-top{% endif %}"}
    #wrapper
      {% include form_success %}
      {% block top_msg %}
      {% endblock %}
      {% if page.slug == 'index' or page.slug == 'mission-and-goals' or page.slug == 'vision-and-values' %}
      {% include 'nav_large' %}
      {% else %}
      {% include nav %}
      {% endif %}
      {% block featured_image %}
      {% endblock %}
      {% block content %}
      {% endblock %}
      {% include footer %}
    {{ 'jquery.min.js' | javascript_tag }}
    %script{:src => "https://unpkg.com/smartphoto@1.1.0/js/jquery-smartphoto.min.js"}
    {{ 'wow.min.js' | javascript_tag }}
    {{ 'holder.min.js' | javascript_tag }}
    {{ 'popper.min.js' | javascript_tag }}
    {{ 'bootstrap.min.js' | javascript_tag }}
    :javascript
      $(document).ready(function($) {
        new WOW().init();    
      });  
    :javascript
      var $hamburger = $(".hamburger");
      $hamburger.on("click", function(e) {
        $hamburger.toggleClass("is-active");
      });
      setTimeout(function() {
        $('.alert').slideUp();
      }, 4000);    
    {% if page.slug == 'available-units' %}
    %script{:src => "https://maps.googleapis.com/maps/api/js?key=AIzaSyB-hAvSS4NGTJLE5SZRLpzvooS8snC48Xw&sensor=false", :type => "text/javascript"}
    {% endif %}
    {% block script %}
    {% endblock %}


